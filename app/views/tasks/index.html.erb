<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<div>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %> <%# this is required to create a link which points to another page with the details. syntax is link_to what_to_click_on prefix_path(object)  %>
</div>
<% end %>

<br>

<%= link_to "Add a new task", tasks_new_path %>


